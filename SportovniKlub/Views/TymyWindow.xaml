<Window x:Class="SportovniKlub.TymyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportovniKlub"
        mc:Ignorable="d"
        Title="Týmy"
        Height="500" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="tymyGrid"
                  ItemsSource="{Binding Tymy}"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#FFF2F2F2"
                  RowBackground="White"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  Margin="0,0,0,10"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Týmu" Binding="{Binding TymID}" Width="*" />
                <DataGridTextColumn Header="Název týmu" Binding="{Binding NazevTymu}" Width="*" />
                <DataGridTextColumn Header="Počet hráčů" Binding="{Binding PocetHracu}" Width="*" />
                <DataGridTextColumn Header="Plat" Binding="{Binding Plat}" Width="*" />
                <DataGridTextColumn Header="Počet trofejí" Binding="{Binding PocetTrofeju}" Width="*" />
                <DataGridTextColumn Header="Výše odměn" Binding="{Binding VyseOdmen}" Width="*" />
                <DataGridTextColumn Header="Sportovní disciplína" Binding="{Binding SportovniDisciplinaNazev}" Width="*" />
                <DataGridTextColumn Header="Sponzor" Binding="{Binding SponzorNazev}" Width="*" />
                <DataGridTextColumn Header="Trenér" Binding="{Binding TrenerPrijmeni}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">

            <Button x:Name="AddTymButton"
                    Content="➕  Add"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#FF00C853"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="AddTymButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FF00C853"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF00E676"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF00A152"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="DeleteTymButton"
                    Content="🗑️  Delete"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    BorderThickness="0"
                    Background="#FFE53935"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="DeleteTymButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FFE53935"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFF5252"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="SaveTymButton"
                    Content="💾  Save"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#FF1E88E5"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="SaveTymButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FF1E88E5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1565C0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CancelButton"
                    Content="✖️  Cancel"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333"
                    Background="#FFE0E0E0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="CancelButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="6"/>
                </Button.Effect>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FFE0E0E0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFBDBDBD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>
