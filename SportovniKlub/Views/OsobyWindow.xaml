<Window x:Class="SportovniKlub.Views.OsobyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Osoby"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="osobyGrid"
                  ItemsSource="{Binding Osoby}"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#FFF2F2F2"
                  RowBackground="White"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  Margin="0,0,0,10"
                  FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID osoby" Binding="{Binding OsobaId}" Width="*" />
                <DataGridTextColumn Header="Jméno" Binding="{Binding Jmeno}" Width="*" />
                <DataGridTextColumn Header="Příjmení" Binding="{Binding Prijmeni}" Width="*" />
                <DataGridTextColumn Header="Datum narození" Binding="{Binding DatumNarozeni, StringFormat=d}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Mail}" Width="*" />
                <DataGridTextColumn Header="Typ osoby" Binding="{Binding TypOsoby}" Width="*" />
                <DataGridTextColumn Header="Sportovní disciplína" Binding="{Binding SportDisciplinaID}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">

            <Button Content="➕  Add"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#FF00C853"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="AddOsobaButton_Click">

                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FF00C853"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF00E676"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF00A152"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="🗑️  Delete"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#FFE53935"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="DeleteOsobaButton_Click">

                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FFE53935"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFF5252"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="💾  Save"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#FF1E88E5"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="SaveOsobaButton_Click">

                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FF1E88E5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1565C0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="✖️  Cancel"
                    Width="150" Height="48"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333"
                    Background="#FFE0E0E0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="5,0"
                    Click="CancelButton_Click">

                <Button.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="6"/>
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FFE0E0E0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFBDBDBD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>

    </Grid>
</Window>
