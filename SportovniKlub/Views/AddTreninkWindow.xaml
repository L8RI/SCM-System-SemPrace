<Window x:Class="SportovniKlub.AddTreninkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Přidat nový trénink"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">

    <Border CornerRadius="15" Background="White" Padding="20" Margin="15">
        <StackPanel>
            <TextBlock Text="Přidat nový trénink"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ID Trenéra:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="TrenerIDTextBox" Grid.Row="0" Grid.Column="1" Margin="0,5" Padding="5" FontSize="14"/>

                <TextBlock Text="Datum:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <DatePicker x:Name="DatumPicker" Grid.Row="1" Grid.Column="1" Margin="0,5" FontSize="14"/>

                <TextBlock Text="Sportovní disciplína ID:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="SportDisciplinaIDTextBox" Grid.Row="2" Grid.Column="1" Margin="0,5" Padding="5" FontSize="14"/>

                <TextBlock Text="Typ tréninku ID:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="TypTreninkuIDTextBox" Grid.Row="3" Grid.Column="1" Margin="0,5" Padding="5" FontSize="14"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="SaveButton"
                        Content="💾  Uložit"
                        Width="140" Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#FF00C853"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="5,0"
                        Click="SaveButton_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="8"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#FF00C853"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF00E676"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF00A152"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="CancelButton"
                        Content="✖️  Zrušit"
                        Width="140" Height="45"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        Background="#FFE0E0E0"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="5,0"
                        Click="CancelButton_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="6"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#FFE0E0E0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFEEEEEE"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFBDBDBD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
